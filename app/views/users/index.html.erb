<p id="notice"><%= notice %></p>

<h1>Internet Access</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Minutes Remaining</th>
      <th>Status</th>
      <th>Active</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr data-user-id="<%= user.id %>">
        <td><%= user.name %></td>
        <td id='<%= "user#{user.id}-countdown" %>'><%= user.expiration ? 'calculating...' : 'unlimited' %></td>
        <td><input id='<%= "user#{user.id}-status" %>'
                   class='user-status'
                   <%= user.active ? 'checked' : '' %>
                   data-toggle="toggle"
                   data-userid='<%= user.id %>'
                   type="checkbox"></td>
        <td id='<%= "user#{user.id}-active" %>'><%= user.active %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script>
  $(document).ready(function(){
    $('.user-status').change(function() {
      $(this).bootstrapToggle('disable');
      var checked = $(this).is(':checked');
      $.ajax({
        context: this,
		    type: 'POST', // Use POST with X-HTTP-Method-Override or a straight PUT if appropriate.
		    dataType: 'json', // Set datatype - affects Accept header
		    url: '/users/' +  $(this).attr('data-userid') + '.json', // A valid URL
		    headers: {"X-HTTP-Method-Override": "PUT"}, // X-HTTP-Method-Override set to PUT.
		    data: {user: {active: checked}}, // Some data e.g. Valid JSON as a string
        success: function(){
		      if (checked) {
              toastr.success('Internet successfully enabled.');
          }else{
              toastr.info('Internet successfully disabled.');
          }
		    },
        error: function(){
            toastr.error('Unable to ' + (checked ? 'enable' : 'disable') + ' internet.');
            // revert the slide toggle without triggering the event handler
            $(this).prop('checked', !checked);
            $(this).parent().toggleClass('off');
            $(this).parent().toggleClass('btn-primary');
            $(this).parent().toggleClass('btn-default');
        },
        complete: function(){
            $(this).bootstrapToggle('enable');
        }
		  });
    });
    var USER_FETCH_INTERVAL = 10000;
    setInterval(function(){
      // Fetch updated user info periodically
      fetch('/users.json').then(function(response){
        return response.json();
      }).then(function(users){
        users.forEach(function(user){
          var $user = $('tr[data-user-id=' + user.id + ']');
          $user.find('td#user' + user.id + '-active').text(user.active);
          var minutesRemaining = 0;
          if (user.active) {
            // If user is active, calculate minutes remaining based on user.expiration
            var currentTimeInSecs = parseInt(((+new Date()) / 1000).toFixed(0), 10);
            var expirationTime = user.expiration || currentTimeInSecs;
            var secondsRemaining = expirationTime - currentTimeInSecs;
            if (secondsRemaining >= 0) {
              minutesRemaining = (secondsRemaining / 60).toFixed(0);
            }
          } else {
            // If user is not active, minutes remaining is user.countdown / 60
            minutesRemaining = (user.countdown / 60).toFixed(0);
          }
          $user.find('td#user' + user.id + '-countdown').text(minutesRemaining);
        });
      });
    }, USER_FETCH_INTERVAL);
  });
</script>